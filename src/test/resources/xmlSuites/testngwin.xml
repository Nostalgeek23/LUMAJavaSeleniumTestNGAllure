<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Windows crossBrowser Test Suite">

    <test name = "ChromeTestWindows" verbose="10">
        <parameter name="browser" value="chrome"/>
        <parameter name="os" value="windows" />
        <classes>
            <class name="com.lumatest.test.ProductPageTest"/>
            <class name="com.lumatest.test.CartTest"/>
            <class name="com.lumatest.test.LoginTest"/>
            <class name="com.lumatest.test.SearchTest"/>
        </classes>
    </test>

    <test name = "EdgeTestWindows" verbose="10">
        <parameter name="browser" value="edge"/>
        <parameter name="os" value="windows" />
        <classes>
            <class name="com.lumatest.test.ProductPageTest"/>
            <class name="com.lumatest.test.CartTest"/>
            <class name="com.lumatest.test.LoginTest"/>
            <class name="com.lumatest.test.SearchTest"/>
        </classes>
    </test>

    <test name = "FirefoxTestWindows" verbose="10">
        <parameter name="browser" value="firefox"/>
        <parameter name="os" value="windows" />
        <classes>
            <class name="com.lumatest.test.ProductPageTest"/>
            <class name="com.lumatest.test.CartTest"/>
            <class name="com.lumatest.test.LoginTest"/>
            <class name="com.lumatest.test.SearchTest"/>
        </classes>
    </test>

</suite>