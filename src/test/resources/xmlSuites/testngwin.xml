<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Windows crossBrowser Test Suite" parallel="methods" thread-count="2" data-provider-thread-count="2">

    <test name = "ChromeTestWindows" verbose="10">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.lumatest.test.ProductPageTest"/>
        </classes>
    </test>

    <test name = "EdgeTestWindows" verbose="10">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.lumatest.test.ProductPageTest"/>
        </classes>
    </test>

    <test name = "FirefoxTestWindows" verbose="10">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.lumatest.test.ProductPageTest"/>
        </classes>
    </test>

</suite>